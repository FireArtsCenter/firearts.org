{{#if jumbotronBig }}
    <section class="jumbotron jumbotron-fluid" style="background-image: url('/images/pour-1.png'); background-position: center 12%; padding: 15rem 0 10rem;">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <h1>
                    {{#if title }}
                        {{ title }} 
                    {{else}}
                        Fire Arts Center of Chicago
                    {{/if}}
                    </h1>
                    {{#if lead}}
                        <p class="lead">{{lead}}</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </section>
{{else}}
    <section class="jumbotron jumbotron-fluid">
        <div class="container">
            <div class="row flex-items-xs-center">
                <div class="col-sm-8">
                    <h1>{{title}}</h1>
                    <p class="lead">{{{lead}}}</p>
                </div>
            </div>
        </div>
    </section>
{{/if}}
