---
interface Props {
	href: string;
	class?: string;
	isExternal?: boolean;
}
const { href, isExternal = false, class: overrideClasses } = Astro.props;
---

<a
	class={overrideClasses
		? overrideClasses
		: 'border-grey-lighter hover:border-fac-orange hover:text-fac-orange focus:border-fac-orange focus:text-fac-orange border-b-2 border-dotted text-white no-underline hover:border-b-2 hover:border-solid focus:border-b-2 focus:border-solid'}
	target={isExternal ? '_blank' : undefined}
	rel={isExternal ? 'noopener noreferrer' : undefined}
	href={href}><slot /></a
>
