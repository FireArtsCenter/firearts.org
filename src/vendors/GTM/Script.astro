---
/**
 * This was messy but to keep the GTM tag as close to the original you need
 * to copy the block from GTM dasmboard, and put it inside the set:html={``}
 * property. Then replace the actual ID on the last line with ${gtmId} so
 * astro will replace it.
 */
interface Props {
	gtmId: string;
}
const {gtmId} = Astro.props;
---
<script is:inline set:html={`(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
})(window,document,'script','dataLayer','${gtmId}');`} />
